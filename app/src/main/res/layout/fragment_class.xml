<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:scrollbars="none"
              android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.wordremember.view.ClassGirdView
            android:layout_marginTop="20dp"
            android:listSelector="@android:color/transparent"
            android:id="@+id/gv_class_type"
            android:background="@color/white"
            android:numColumns="4"
            android:gravity="center"
            android:columnWidth="120dp"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            android:verticalSpacing="20dp"
            android:horizontalSpacing="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_marginTop="10dp"
            android:background="@color/search_bg_color"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:background="@color/white"
            android:padding="10dp"
            android:text="@string/tv_class_choose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.wordremember.view.RecommandListView
            android:id="@+id/rcv_class_recommand"
            android:background="@color/white"
            android:divider="@null"
            android:listSelector="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>