<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_fragment_home"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>
    <LinearLayout
        android:layout_marginTop="80dp"
        android:layout_below="@id/iv_fragment_home"
        android:layout_above="@+id/btn_learn_home"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <RelativeLayout
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_centerHorizontal="true"
                android:text="今日完成"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_finish_today"
                android:layout_centerInParent="true"
                android:textSize="38sp"
                android:textColor="@color/orienge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_centerHorizontal="true"
                android:text="今日任务"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_total_today"
                android:layout_centerInParent="true"
                android:textSize="38sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_learn_home"
        android:background="@drawable/btn_learn_home_shape"
        android:text="立 即 学 习"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="65dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
</RelativeLayout>