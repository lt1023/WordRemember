<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <Button
            android:layout_centerVertical="true"
            android:id="@+id/btn_remember_back"
            android:layout_marginLeft="6dp"
            android:background="@drawable/base_icon_back_dark"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
        <TextView
            android:textColor="@color/textcolor"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:text="@string/tv_remember_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_currentWord"
                android:text=""
                android:gravity="center"
                android:textSize="14sp"
                android:layout_width="@dimen/text_dimen"
                android:layout_height="@dimen/text_dimen"/>
            <TextView
                android:text="/"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_totalwords"
                android:text=""
                android:gravity="center"
                android:textSize="14sp"
                android:layout_width="@dimen/text_dimen"
                android:layout_height="@dimen/text_dimen"/>
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_remember_next"
        android:layout_centerHorizontal="true"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_learn_home_shape"
        android:layout_width="250dp"
        android:layout_height="40dp"/>

    <ScrollView
        android:layout_below="@id/title"
        android:layout_above="@id/btn_remember_next"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/read"
                android:layout_alignParentEnd="true"
                android:id="@+id/iv_read_rememberwords"
                android:layout_marginRight="20dp"
                android:layout_width="@dimen/text_dimen"
                android:layout_height="@dimen/text_dimen"/>
            <LinearLayout
                android:id="@+id/word_info"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_remember_word"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"/>
                <TextView
                    android:id="@+id/tv_remember_symbol"
                    android:layout_marginTop="4dp"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_dimen"/>
                <TextView
                    android:id="@+id/tv_remember_mean"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_dimen"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_remember_sentence"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:layout_below="@id/word_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>